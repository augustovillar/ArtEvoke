# Backend (FastAPI) Environment Variables
# Copy this file to .backend.env and update with your actual values

# Database Configuration
# IMPORTANT: Database credentials must match .mysql.env
DB_HOST=mysql
DB_PORT=3306
DB_USER=appuser
# Must match: MYSQL_USER in .mysql.env AND PMA_USER in .phpmyadmin.env
DB_PASSWORD=changeme_app
# Must match: MYSQL_PASSWORD in .mysql.env AND PMA_PASSWORD in .phpmyadmin.env
DB_NAME=artevoke
# Must match: MYSQL_DATABASE in .mysql.env

# Qdrant Vector Database
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=artevoke_collection

# API Configuration
API_HOST=0.0.0.0
API_PORT=5001
API_WORKERS=4

# Security
JWT_SECRET=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=300

# Application Settings
DEBUG=false
LOG_LEVEL=INFO
CORS_ORIGINS=http://localhost:3000,https://artevoke.com.br,https://www.artevoke.com.br

# LLM Configuration
MARITACA_API_KEY=foo

