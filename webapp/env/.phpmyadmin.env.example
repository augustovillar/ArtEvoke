# PHPMyAdmin Environment Variables
# Copy this file to .phpmyadmin.env and update with your actual values

# Database Connection
PMA_HOST=mysql
PMA_PORT=3306

# Authentication
PMA_USER=appuser
#  Must match: MYSQL_USER in .mysql.env AND DB_USER in .backend.env
PMA_PASSWORD=changeme_app
# Must match: MYSQL_PASSWORD in .mysql.env AND DB_PASSWORD in .backend.env

# Upload Limit
UPLOAD_LIMIT=10M

# Memory Limit
MEMORY_LIMIT=512M

# Max Execution Time
MAX_EXECUTION_TIME=600

