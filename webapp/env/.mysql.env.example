# MySQL Database Environment Variables
# Copy this file to .mysql.env and update with your actual values

# Root User
MYSQL_ROOT_PASSWORD=changeme_root_password

# Application Database
MYSQL_DATABASE=artevoke
# Must match: DB_NAME in .backend.env
MYSQL_USER=appuser
# Must match: DB_USER in .backend.env AND PMA_USER in .phpmyadmin.env
MYSQL_PASSWORD=changeme_app
# Must match: DB_PASSWORD in .backend.env AND PMA_PASSWORD in .phpmyadmin.env

# Character Set
MYSQL_CHARSET=utf8mb4
MYSQL_COLLATION=utf8mb4_unicode_ci

# Additional Settings
TZ=America/Sao_Paulo

